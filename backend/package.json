{
    "name":  "petshop-backend",
    "version":  "1.0.0",
    "description":  "Backend service for Pet Shop management platform",
    "main":  "dist/src/server.js",
    "scripts":  {
                    "dev":  "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register src/server.ts",
                    "build":  "tsc \u0026\u0026 tsc-alias -p tsconfig.json",
                    "start":  "node dist/src/server.js",
                    "lint":  "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
                    "test":  "jest --coverage --runInBand",
                    "test:watch":  "jest --watch",
                    "prisma:generate":  "prisma generate",
                    "prisma:migrate":  "prisma migrate deploy",
                    "prisma:studio":  "prisma studio",
                    "seed":  "ts-node --require tsconfig-paths/register prisma/seed.ts",
                    "swagger":  "node ./scripts/generate-swagger.js"
                },
    "prisma":  {
                   "schema":  "prisma/schema.prisma"
               },
    "dependencies":  {
                         "@prisma/client":  "^6.18.0",
                         "bcrypt":  "^5.1.1",
                         "cors":  "^2.8.5",
                         "dayjs":  "^1.11.10",
                         "express":  "^4.19.2",
                         "express-async-errors":  "^3.1.1",
                         "helmet":  "^7.1.0",
                         "hpp":  "^0.2.3",
                         "jsonwebtoken":  "^9.0.2",
                         "morgan":  "^1.10.0",
                         "swagger-ui-express":  "^5.0.1",
                         "winston":  "^3.13.0",
                         "zod":  "^3.23.8"
                     },
    "devDependencies":  {
                            "@faker-js/faker":  "^9.1.0",
                            "@swc/jest":  "^0.2.37",
                            "@types/bcrypt":  "^5.0.2",
                            "@types/cors":  "^2.8.17",
                            "@types/express":  "^4.17.21",
                            "@types/hpp":  "^0.2.3",
                            "@types/jest":  "^29.5.12",
                            "@types/jsonwebtoken":  "^9.0.6",
                            "@types/morgan":  "^1.9.7",
                            "@types/node":  "^22.6.0",
                            "@types/supertest":  "^6.0.3",
                            "@types/swagger-ui-express":  "^4.1.8",
                            "@typescript-eslint/eslint-plugin":  "^8.7.0",
                            "@typescript-eslint/parser":  "^8.7.0",
                            "eslint":  "^8.57.1",
                            "eslint-config-prettier":  "^9.1.0",
                            "eslint-plugin-import":  "^2.29.1",
                            "eslint-plugin-prettier":  "^5.2.1",
                            "jest":  "^29.7.0",
                            "prettier":  "^3.3.3",
                            "prisma":  "^6.18.0",
                            "supertest":  "^6.3.4",
                            "ts-jest":  "^29.2.5",
                            "ts-node":  "^10.9.2",
                            "ts-node-dev":  "^2.0.0",
                            "tsconfig-paths":  "^4.2.0",
                            "typescript":  "^5.6.2",
                            "tsc-alias":  "^1.8.8"
                        },
    "engines":  {
                    "node":  "\u003e=18.18.0"
                }
}
