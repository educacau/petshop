{
  "openapi": "3.0.3",
  "info": {
    "title": "Pet Shop API",
    "description": "API oficial para gestao do Pet Shop (autenticacao, usuarios, pets, agendamentos e configuracoes).",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor local de desenvolvimento"
    }
  ],
  "tags": [
    {"name": "Auth", "description": "Fluxos de autenticacao e registro"},
    {"name": "Users", "description": "Gestao de usuarios da plataforma"},
    {"name": "Pets", "description": "Cadastro e consulta de pets"},
    {"name": "Schedules", "description": "Agendamentos de servicos"},
    {"name": "Settings", "description": "Configuracoes administrativas"}
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {}
}
